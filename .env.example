# Public web entry port (no 80/443/8080 requirement)
PUBLIC_PORT=24443
TZ=Asia/Shanghai

# Auth
JWT_SECRET=please-change-me-to-a-long-random-secret
JWT_EXPIRES_IN=12h
FORCE_HTTPS_AUTH=1
ALLOW_PLAINTEXT_LOGIN=0
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-admin-password

# Jellyfin integration (optional; required for "影视管理" module)
JELLYFIN_BASE_URL=http://arknas-jellyfin:8096
JELLYFIN_API_KEY=
JELLYFIN_USER_ID=

# qBittorrent integration (optional; required for "下载管理" module)
QBIT_BASE_URL=http://arknas-qbittorrent:18080
QBIT_USERNAME=admin
QBIT_PASSWORD=adminadmin

# App center install paths and ports
MEDIA_PATH=/srv/media
DOWNLOADS_PATH=/srv/downloads
DOCKER_DATA_PATH=/srv/docker
JELLYFIN_HOST_PORT=18096
QBIT_WEB_PORT=18080
QBIT_PEER_PORT=16881
PORTAINER_HOST_PORT=19000
WATCHTOWER_INTERVAL=86400
ARKNAS_INTERNAL_NETWORK=arknas-hub_arknas_internal
COMPOSE_PROJECTS_DIR=/data/compose-projects
ARKNAS_ALLOW_HOST_SERVICE_CONTROL=1
ARKNAS_ALLOW_HOST_NETWORK_APPLY=1
ARKNAS_HOST_EXEC_MODE=nsenter

# SSL management (Cloudflare DNS challenge)
ACME_EMAIL=
ACME_DIRECTORY=https://acme-v02.api.letsencrypt.org/directory
CLOUDFLARE_API_TOKEN=
